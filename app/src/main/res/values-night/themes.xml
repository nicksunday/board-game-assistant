<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base night theme -->
    <style name="Base.Theme.BoardGameAssistant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <!-- Custom Toolbar Style (in night mode) -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="titleTextColor">@color/onPrimaryColor</item>
    </style>

    <style name="Theme.BoardGameAssistant" parent="Base.Theme.BoardGameAssistant" />
</resources>
